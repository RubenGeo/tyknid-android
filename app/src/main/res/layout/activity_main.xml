<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/poolip"
        android:layout_width="194dp"
        android:layout_height="54dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="2dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDeleteWallet" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="4dp"
        android:text="Pool IP"
        app:layout_constraintBottom_toTopOf="@+id/poolip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDeleteWallet" />

    <Button
        android:id="@+id/btnDeleteWallet"
        android:layout_width="181dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:background="#FF8A80"
        android:backgroundTint="#F44336"
        android:text="Delete wallet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tykn test app"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCreateWallet"
        android:layout_width="137dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:text="Create wallet"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="19dp" />

    <Button
        android:id="@+id/btnRqstCred"
        android:layout_width="137dp"
        android:layout_height="59dp"
        android:text="Request Credential"
        app:layout_constraintTop_toBottomOf="@+id/btngenerateDID"
        tools:layout_editor_absoluteX="18dp" />

    <Button
        android:id="@+id/btngenerateDID"
        android:layout_width="137dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:text="Generate DID"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateWallet"
        tools:layout_editor_absoluteX="18dp" />

    <Button
        android:id="@+id/btnCreateProof"
        android:layout_width="138dp"
        android:layout_height="44dp"
        android:text="Create Proof"
        app:layout_constraintTop_toBottomOf="@+id/btnAcceptCred"
        tools:layout_editor_absoluteX="18dp" />

    <Button
        android:id="@+id/btnAcceptCred"
        android:layout_width="137dp"
        android:layout_height="75dp"
        android:text="Accept and Save Credential"
        app:layout_constraintTop_toBottomOf="@+id/btnRqstCred"
        tools:layout_editor_absoluteX="18dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:backgroundTintMode="multiply"
        android:baselineAlignBottom="false"
        android:tint="#FFFFFF"
        android:tintMode="multiply"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:srcCompat="@mipmap/tykn_logo_round"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/statusBox"
        android:layout_width="410dp"
        android:layout_height="259dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/runTestSequence"
        android:layout_width="187dp"
        android:layout_height="116dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Run test sequence"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poolip" />

</androidx.constraintlayout.widget.ConstraintLayout>